<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head.ejs') %>

    <script>
      'use strict';

      $(async function () {

        let recentPolls = await get('/polls/recent');

        for (const [id, poll] of Object.entries(recentPolls)) {


          console.log(poll);



          let pollPreviewTemplate = $('#pollPreviewTemplate')[0].content;

          let cloned = $(pollPreviewTemplate.cloneNode(true));

          let href = cloned.children().children().attr('href');

          cloned.children().children().attr('href', href + poll.id);
          cloned.children().children().text(poll.title);

          $('#mostRecent').append(cloned);
        }

      });

    </script>

</head>


<body>

  <div class="container">

    <div class="row">

      <nav>

        <a href="createPoll">Create a poll</a>

      </nav>

      <div class="col">

      </div>
    </div>

    <br>

    <div class="row" id="mostRecent">

    </div>


  </div>

</body>

</html>

<template id="pollPreviewTemplate">

  <div>

    <a href="poll/">title</a>

  </div>

</template>